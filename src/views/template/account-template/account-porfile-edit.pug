extends ../../base/base.pug

block content
    a(href=`/account/${loggedInUser._id}`) &larr; 뒤로가기
    form
        div 
            span 개인정보
            input(name="email", type="text", placeholder="이메일", value=`${loggedInUser.email}` required)
            input(name="username", type="text", placeholder="유저이름",  value=`${loggedInUser.username}`, required)
            input(name="passowrd", type="password", placeholder="기존 비밀번호", minlength=10)
            input(name="passowrd", type="password", placeholder="새 비밀번호", minlength=10)
            input(name="passowrd", type="password", placeholder="새 비밀번호 확인", minlength=10)
            span 변경할 비밀번호를 입력하지 않으면, 기존의 비밀번호로 유지됩니다 
            br
            br
        div
            span 세부설정 공개 여부 (선택 시 전체 공개)
                input(type="checkbox")
                br
            span 사이트 시작점
                select
                    option(value="starting-1") 메인
                    option(value="starting-2") 관심 프로젝트 창
                    option(value="starting-3") 나의 프로필
            span 직종 선택
                select
                    option(value="major-1") 제품 디자이너
                    option(value="major-2") 캐릭터 디자이너
                    option(value="major-3") 그래픽 디자이너
            span 관심사 설정
                select
                    option(value="favor-1") AA 
                    option(value="favor-2") BB
                    option(value="favor-3") CC
            span 테마색상 설정
                select
                    option(value="color-1") 화이트
                    option(value="color-2") 레드
                    option(value="color-3") 블루
                    option(value="color-4") 블랙
            span 목적
                select
                    option(value="purpose-1") 취업
                    option(value="purpose-2") 채용
                    option(value="purpose-3") 취미
                    option(value="purpose-4") 포트폴리오
        input(type="submit")
