extends ../../base/base.pug

block content
    form(method="POST")#account-create__form
        label(for="email")#account-create__name 일반계정
        input(name="email", placeholder="이메일", type="text", required, value=email)
        input(name="username", placeholder="유저이름", type="text", required, value=username)
        input(name="password", placeholder="비밀번호", type="password", required)
        input(name="password2", placeholder="비밀번호 확인", type="password", required)
        input(name="create", value="계정 생성", type="submit")
    br
    hr
    div
        span 이미 계정이 있으신가요?
        br
        a(href="/login") 바로 로그인하기 &rarr;