extends ../../base/base.pug

block content
    form(method="POST")#account-create__form
        label(for="email")#account-create__name 일반계정
        input(name="email", placeholder="이메일", type="text", required, value=email)
        input(name="username", placeholder="유저이름", type="text", required, value=username, minlength=6)
        input(name="password", placeholder="비밀번호", type="password", required, minlength=10)
        input(name="password2", placeholder="비밀번호 확인", type="password", required, minlength=10)
        input(name="create", value="계정 생성", type="submit")
    br
    hr
    div
        span 이미 계정이 있으신가요?
        br
        a(href="/account/login") 바로 로그인하기 &rarr;

    div
        span SNS 로그인을 원하시나요?
        div
            a(href="/account/google/start") 구글
            a(href="/account/kakao/start") 카카오
            a(href="/account/naver/start") 네이버
            a(href="/account/facebook/start") 페이스북
            a(href="/account/instagram/start") 인스타그램

    div
        sapn 관리자 계정 생성을 원하시나요?
        br
        a(href="/admin/join") 관리자 계정 생성하기 &rarr;